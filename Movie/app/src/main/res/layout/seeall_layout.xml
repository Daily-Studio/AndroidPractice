<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="군도"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
        <ImageView
                android:layout_width="46dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/ic_15" android:id="@+id/imageView2"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
        <RatingBar
                android:layout_width="wrap_content"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" android:id="@+id/ratingBar4" android:layout_weight="1"
                android:numStars="5" android:rating="4.5"/>
        <TextView
                android:text="8.2 (1,142명 참여)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_weight="1"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
    </ScrollView>
</LinearLayout>